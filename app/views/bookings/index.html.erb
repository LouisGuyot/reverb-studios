<div class="container">

  <h2>Your booking:</h2>

  <% @bookings.each do |booking| %>
  <div class="booking">
    <p>You have booked:</p>
    <p><%= booking.studio.name.capitalize %></p>
    <p>From: <%= booking.start_date %></p>
    <p>To: <%= booking.end_date %></p>
    <p><%= link_to "view details", booking_path(booking)  %></p>
    <p><%= link_to "Remove booking",
            booking_path(booking),
            data: {turbo_method: :delete, turbo_confirm: "Delete reservation ?"}
            %></p>
  </div>
  <% end %>

</div>
