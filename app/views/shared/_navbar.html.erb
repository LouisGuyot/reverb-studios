<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div class="container-fluid">
    <%= link_to image_tag("Sans titre - 2.png", :alt => "logo", :class => "css", width: 50 ), root_path %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
           <li class="nav-item active">
            <%= form_with url: root_path, method: :get, class:"d-flex" do%>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Search" %>
               <%= submit_tag "Search", class: "btn btn-outline-dark" %>
            <% end %>
          </li>
          <li class="nav-item active">
            <%= link_to "Home",  root_path, class: "nav-link" %>
          </li>
          <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "My bookings",  studio_bookings_path(current_user), class: "nav-link" %>
          </li>
            <li class="nav-item">
            <%= link_to "Sublet my studio",  new_studio_path(current_user), class: "nav-link" %>
          </li>
           <li class="nav-item">
            <%= link_to "Log out",  destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
          </li>
          <% else %>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
          </li>
             <li class="nav-item">
            <%= link_to "Log in",  user_session_path, class: "nav-link" %>
          </li>
          <% end %>
          <!--li class="nav-item"-->
          <!--/li-->
      </ul>
    </div>
  </div>
</div>
