
<div class="main-container">
  <div class="banner container-fluid">
  </div>
   <div class="minitext"><h4 class="minitext"><strong><i>Most popular worldwide studio offers</i></strong></h4></div>
   <div class="card-container">
        <% @studios.each do |studio| %>
        <div class="card">
          <%= link_to cl_image_tag(studio.photo.key, height: "90%", width: "90%", class:"card-img-top"), studio_path(studio) %>
          <div class="card-body">
          <h3> <%= link_to studio.name.capitalize, studio_path(studio), class: "title-link text-decoration-none" %></h3>
          <h4 class="card-text price"><%= studio.price %> $</h4>
          <p class="card-text address"><%= studio.address %></p>
          </div>
        </div>
        <% end %>
  </div>
