<div class="container">
  <div class="show-title">
    <div class="d-flex justify-content-between">
      <h1><%= @studio.name.capitalize %></h1>
      <p><%= link_to "Remove studio",
            studio_path(@studio, @booking),
            data: {turbo_method: :delete, turbo_confirm: "Delete #{@studio}?"}, class:"btn btn-warning justify-content-end", style:"float: right"
            %></p>
    </div>
    <p><%= @studio.address %></p>
  </div>

  <div class="image-container">
    <%= image_tag @studio.photo, class: "image-show" %>
  </div>

  <div class="separation"></div>

  <div class="row">

    <div class="text-detail col-10">
      <p><%= @studio.description %></p>
    </div>

    <div class="booknow col-2 bookcard">
      <h3><%= @studio.price %> $ per day</h3>
      <div class="btn btn-warning"> <%= link_to "Book now", "#{@studio.id}/bookings/new", class:"text-decoration-none text-light" %></div>
    </div>

  </div>

    <div class="separation"></div>

    <div class="map-container">
      <div style="width: 100%; height: 400px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>

<% if user_signed_in? && current_user.id == @studio.user_id %>
    <%= link_to "Remove studio", studio_path(@studio, @booking), data: {turbo_method: :delete, turbo_confirm: "Delete #{@studio}?"}, class:"btn btn-warning my-3" %>
<% end %>
</div>
